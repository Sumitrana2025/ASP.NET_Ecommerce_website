@model Features

@{
    ViewData["Title"] = "Delete feature";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Delete Confirmation for @Model.FeatureName</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
               
                    
                    <div class="form-group text-center">
                        <img class="border-info rounded-circle" style="max-width: 150px" id="FeaturePicturePreview" />
                    </div>
                    <div class="form-group" style="margin:10px">
                        <label asp-for="FeaturePictureURL" class="control-label"></label>
                        <input asp-for="FeaturePictureURL" class="form-control" readonly/>
                        <span asp-validation-for="FeaturePictureURL" class="text-danger"></span>
                    </div>
                    <div class="form-group" style="margin:10px">
                        <label asp-for="FeatureName" class="control-label"></label>
                        <input asp-for="FeatureName" class="form-control" readonly/>
                        <span asp-validation-for="FeatureName" class="text-danger"></span>
                    </div>
                    <div class="form-group" style="margin:10px">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" readonly/>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <a class="btn btn-outline-secondary" asp-action="Index"><i class="bi bi-binoculars"></i>Show All</a>
                        <form asp-action="Delete" >
                            <input type="hidden" asp-for="FeatureID" />
                            <input type="submit" value="Confirm" class="btn btn-danger" style="float: right"  />
                        </form>
                        
                        

                    </div>
               
            </div>

        </div>

    </div>
</div>

@section Scripts{
    <script>

        $(document).ready(function () {
            var output = document.getElementById('FeaturePicturePreview');
            output.src = $("#FeaturePictureURL").val();
        })
    </script>
}
