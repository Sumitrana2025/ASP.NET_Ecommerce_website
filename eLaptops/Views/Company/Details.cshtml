@model Company

@{
    ViewData["Title"] = "Add a new Company";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Details for @Model.CompanyName</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
               
                    
                    <div class="form-group text-center">
                        <img class="border-info rounded-circle" style="max-width: 150px" id="CompanyLogoPreview" />
                    </div>
                    <div class="form-group" style="margin:10px">
                        <label asp-for="CompanyLogo" class="control-label"></label>
                        <input asp-for="CompanyLogo" class="form-control" readonly/>
                        <span asp-validation-for="CompanyLogo" class="text-danger"></span>
                    </div>
                    <div class="form-group" style="margin:10px">
                        <label asp-for="CompanyName" class="control-label"></label>
                        <input asp-for="CompanyName" class="form-control" readonly/>
                        <span asp-validation-for="CompanyName" class="text-danger"></span>
                    </div>
                    <div class="form-group" style="margin:10px">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" readonly/>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        
                        <a class="btn btn-outline-secondary" asp-action="Index" style="margin-right:320px"><i class="bi bi-binoculars"></i>Show All</a>
                        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                        {
                        <a class="btn btn-outline-success float right" asp-action="Edit" asp-route-id="@Model.CompanyID">Edit</a>
                        }
                </div>
               
            </div>

        </div>

    </div>
</div>

@section Scripts{
    <script>

        $(document).ready(function () {
            var output = document.getElementById('CompanyLogoPreview');
            output.src = $("#CompanyLogo").val();
        })
    </script>
}

