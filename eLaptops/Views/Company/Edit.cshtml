@model Company

@{
    ViewData["Title"] = "Update Company";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Update Company</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group text-center">
                        <img id="CompanyLogoPreview" class="border-info rounded-circle" style="max-width: 150px" />
                    </div>
                    <div class="form-group" style="margin:10px">
                        <label asp-for="CompanyLogo" class="control-label"></label>
                        <input asp-for="CompanyLogo" class="form-control" />
                        <span asp-validation-for="CompanyLogo" class="text-danger"></span>
                    </div>
                    <div class="form-group" style="margin:10px">
                        <label asp-for="CompanyName" class="control-label"></label>
                        <input asp-for="CompanyName" class="form-control" />
                        <span asp-validation-for="CompanyName" class="text-danger"></span>
                    </div>
                    <div class="form-group" style="margin:10px">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <a class="btn btn-outline-secondary" asp-action="Index" style="margin-right:320px"><i class="bi bi-binoculars"></i>Show All</a>
                        <input type="submit" value="Update" class="btn btn-outline-success float-right" style="margin:20px" />

                    </div>
                </form>
            </div>

        </div>

    </div>
</div>

@section Scripts{
    <script>

        $(document).ready(function () {
            var output = document.getElementById('CompanyLogoPreview');
            output.src = $("#CompanyLogo").val();
        })

        $("#CompanyLogo").on("change", function () {
            var output = document.getElementById('CompanyLogoPreview');
            output.src = $(this).val();
        })
    </script>
}

