@model IEnumerable<Company>

@{
    ViewData["Title"] = "List of Company";
}

<div class="row" style="text-align:center">
    <div class="col-md-8 offset-md-2" style="margin: 0 auto; text-align:left">

        <table class="table" style="width:1000px">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(model => model.CompanyLogo)</th>
                    <th style="width:100px">@Html.DisplayNameFor(model => model.CompanyName)</th>
                    <th style="width:430px">@Html.DisplayNameFor(model => model.Description)</th>
                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <th>Actions</th>
                    }
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src="@item.CompanyLogo" alt="@item.CompanyName" style="max-width: 150px" />
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.CompanyName)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                        {
                            <td class="align-middle">
                                <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.CompanyID"><i class="bi bi-pencil-square"></i>Edit </a> |
                                <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.CompanyID"><i class="bi bi-eye"></i>Details </a> |
                                <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.CompanyID"><i class="bi bi-trash"></i>Delete </a>
                            </td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

